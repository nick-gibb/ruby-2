<% cache @product do %>
    <h1><%= @product.name %></h1>
<% end %>

<%= link_to "Back", products_path %>
<% if authenticated? %>
    <%= link_to "Edit", edit_product_path(@product) %>
    <%= link_to "Destroy", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>